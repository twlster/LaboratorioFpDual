<AnchorPane prefHeight="808.0" prefWidth="1251.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.fpdualjavafx.ejemplofx.MainWindowController">
   <children>
      <MenuBar fx:id="barraMenu" prefHeight="32.0" prefWidth="1251.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#switchToPrimary" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem fx:id="menuItemDeleteCache" mnemonicParsing="false" onAction="#deleteCache" text="Delete Cache" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="menuItemAbout" mnemonicParsing="false" onAction="#about" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Pane layoutX="1.0" layoutY="103.0" prefHeight="705.0" prefWidth="1251.0">
         <children>
            <TextArea fx:id="text" editable="false" prefHeight="705.0" prefWidth="1251.0" />
         </children>
      </Pane>
      <HBox alignment="CENTER_LEFT" layoutX="1.0" layoutY="32.0" prefHeight="71.0" prefWidth="1251.0">
         <children>
            <Label text="Background">
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </Label>
            <ColorPicker fx:id="backgroundColor" editable="true" prefHeight="31.0" prefWidth="107.0">
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </ColorPicker>
            <Label text="Text">
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </Label>
            <ColorPicker fx:id="textColor" editable="true">
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </ColorPicker>
         </children>
      </HBox>
   </children>
</AnchorPane>
